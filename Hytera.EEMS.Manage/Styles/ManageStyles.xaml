            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="bd" MaxWidth="16" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition MaxHeight="12"></RowDefinition>
                                <RowDefinition Height="0.00001*"></RowDefinition>
                                <RowDefinition MaxHeight="12"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Name="gd" Grid.Row="0" Width="16" Height="12">
                                <Grid.Background >
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageDownDefault.png">
                                    </ImageBrush>
                                </Grid.Background>
                            </Grid>
                            <Grid Name="gm" Grid.Row="1">
                                <Grid.Background >
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageMDefault.png">
                                    </ImageBrush>
                                </Grid.Background>
                            </Grid>
                            <Grid Name="gu" Grid.Row="2" Width="16" Height="12">
                                <Grid.Background >
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageUpDefault.png">
                                    </ImageBrush>
                                </Grid.Background>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="gd" Property="Background"  >
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageDownOver.png"></ImageBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="gm" Property="Background"  >
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageMOver.png"></ImageBrush>
