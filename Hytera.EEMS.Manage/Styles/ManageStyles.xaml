    <!--滚动条滚动区域的模板-->
    <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="22"/>
                <RowDefinition Height="0.00001*"/>
                <RowDefinition MaxHeight="22"/>
            </Grid.RowDefinitions>
            <Border Grid.RowSpan="3" Background="#122036" BorderThickness="1">
                <Border BorderThickness="0" Margin="1" Background="Transparent"/>
            </Border>

            <control:ImageButton Grid.Row="0" Height="22" Width="22"  Command="ScrollBar.LineUpCommand" Style="{DynamicResource syImageBtn}"
                                 MouseOverSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonDownOver.png"
                                 MouseDownSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonDownSelect.png"
                                 DefaultSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonDownDefault.png">
            </control:ImageButton>

            <Track  Name="PART_Track" Grid.Row="1"  IsDirectionReversed="True" >
                <Track.DecreaseRepeatButton>
                    <RepeatButton         Style="{StaticResource ScrollBarPageButton}"         Command="ScrollBar.PageUpCommand" />
                </Track.DecreaseRepeatButton>

                <Track.Thumb >
                    <Thumb   Style="{StaticResource ScrollBarThumb}" />
                </Track.Thumb>

                <Track.IncreaseRepeatButton>
                    <RepeatButton   Style="{StaticResource ScrollBarPageButton}" Command="ScrollBar.PageDownCommand" />
                </Track.IncreaseRepeatButton>
            </Track>

            <control:ImageButton Grid.Row="2" Height="22" Width="22" Command="ScrollBar.LineDownCommand" Style="{DynamicResource syImageBtn}"
                                 MouseOverSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonUpOver.png"
                                 MouseDownSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonUpSelect.png"
                                 DefaultSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageButtonUpDefault.png">
            </control:ImageButton>
        </Grid>
    </ControlTemplate>

