                                 MouseOverSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonDownOver.png"
                                 MouseDownSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonDownSelect.png"
                                 DefaultSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonDownDefault.png">
            </control:ImageButton>

            <Track  Name="PART_Track" Grid.Row="1"  IsDirectionReversed="True" >
                <Track.DecreaseRepeatButton>
                    <RepeatButton         Style="{StaticResource ScrollBarPageButtonPlayList}"         Command="ScrollBar.PageUpCommand" />
                </Track.DecreaseRepeatButton>

                <Track.Thumb >
                    <Thumb   Style="{StaticResource ScrollBarThumbPlayList}" />
                </Track.Thumb>

                <Track.IncreaseRepeatButton>
                    <RepeatButton   Style="{StaticResource ScrollBarPageButtonPlayList}" Command="ScrollBar.PageDownCommand" />
                </Track.IncreaseRepeatButton>
            </Track>

            <control:ImageButton Grid.Row="2" Height="11" Width="18" Command="ScrollBar.LineDownCommand" Style="{DynamicResource syImageBtn}"
                                 MouseOverSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonUpOver.png"
                                 MouseDownSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonUpSelect.png"
                                 DefaultSource="/Hytera.EEMS.Resources;Component/Images/Manage/PlayList/ScrollViewer/ScrollBarPageButtonUpDefault.png">
            </control:ImageButton>
        </Grid>
    </ControlTemplate>

    <Style x:Key="ScrollBarStylePlayList" TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="18"/>
                <Setter Property="Height" Value="Auto" />
                <Setter Property="Template" Value="{StaticResource VerticalScrollBarPlayList}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type ScrollViewer}" x:Key="styleScrollViewerPlayList">
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollViewer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition  Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ScrollContentPresenter Grid.Column="0"/>
                        <ScrollBar Name="PART_VerticalScrollBar" Grid.Column="1" Value="{TemplateBinding VerticalOffset}"
                                           Maximum="{TemplateBinding ScrollableHeight}" ViewportSize="{TemplateBinding ViewportHeight}"
                                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                           Style="{StaticResource ScrollBarStylePlayList}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
