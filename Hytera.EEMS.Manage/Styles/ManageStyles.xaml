                                <Setter.Value>
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageUpOver.png"></ImageBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="gd" Property="Background"  >
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/MainScrollViewer/ScrollBarPageDownSelect.png"></ImageBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="gm" Property="Background"  >
