<controls:BaseWindow x:Class="Hytera.EEMS.Main.Welcome.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:Hytera.EEMS.Resources.Controls;assembly=Hytera.EEMS.Resources"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded" 
           Style="{StaticResource BaseWindow}"          WindowStartupLocation="CenterScreen" Closed="Window_Closed" ShowInTaskbar="False"
        Title="WelcomeWindow" Height="404" Width="567">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Hytera.EEMS.Resources;Component/Images/Main/Welcome/windowBg.png" />
        </Grid.Background>
        <TextBlock Margin="0,-250,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Foreground="#b4d5ff" Text="{StaticResource appMainWelcomeTitle}" />
        <Label x:Name="labpg" Content="0%" Margin="0,85,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"   Style="{StaticResource syWelcomeLabe}" />
        <TextBlock Name="tbMsg" HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="{StaticResource appMainLoadData}"  Margin="0,0,0,40" FontSize="{StaticResource fontSize20}" Foreground="#5f80bc" />
    </Grid>
</controls:BaseWindow>
