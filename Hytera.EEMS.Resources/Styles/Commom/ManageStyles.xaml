    <Style x:Key="ListBoxStyle" TargetType="{x:Type ListBox}">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
        <Setter Property="Background"  Value="{DynamicResource ListBoxBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBox}">
                    <Border  Name="Border" BorderThickness="0" CornerRadius="2" >
                        <ScrollViewer Margin="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Style="{DynamicResource styleScrollViewerPlay}">
                            <ItemsPresenter></ItemsPresenter>
                        </ScrollViewer>
                        <Border.Background>
                            <ImageBrush  ImageSource="/Hytera.EEMS.Resources;Component/Images/Manage/Play/ListBoxBackground.png" />
                        </Border.Background>
                    </Border>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

