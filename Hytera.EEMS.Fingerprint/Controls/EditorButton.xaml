<UserControl x:Class="Hytera.EEMS.Fingerprint.Controls.EditorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="this"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="218">
    <Grid>
        <Button x:Name="btnEditor" Style="{StaticResource syEditorButton}" Content="{Binding Text,ElementName=this}" Click="btnEditor_Click" />
        <TextBox x:Name="txtName" Visibility="Collapsed" Style="{StaticResource syEditorText}" Text="{Binding Text,ElementName=this}" LostFocus="txtName_LostFocus" />
    </Grid>
</UserControl>
